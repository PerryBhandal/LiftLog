<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <!-- NOTHING ABOVE THIS LINE. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/newTempBlueHeader"
        android:orientation="vertical" >

        <!-- Begin Header -->

        <LinearLayout
            android:id="@+id/t_workout_exercise_container_lay_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/t_workout_exercise_container_header_name"
                style="@style/text.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Dumbbell Bench Press"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/t_workout_exercise_container_header_expand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:src="@android:drawable/btn_dialog" />
        </LinearLayout>

        <!-- Begin Body -->

        <LinearLayout
            android:id="@+id/t_workout_exercise_container_lay_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Begin weights header. -->

            <LinearLayout
                android:id="@+id/t_workout_exercise_container_lay_setHeader"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/newTempStaticHeader"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/t_workout_exercise_container_setHeader_set"
                    style="@style/text.Large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Set"
                    android:textColor="@color/newTempBg" />

                <TextView
                    android:id="@+id/t_workout_exercise_container_setHeader_weight"
                    style="@style/text.Large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Weight"
                    android:textColor="@color/newTempBg" />

                <TextView
                    android:id="@+id/t_workout_exercise_container_setHeader_reps"
                    style="@style/text.Large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Reps"
                    android:textColor="@color/newTempBg" />
            </LinearLayout>

            <View style="@style/divider.thinDivider"
                android:background="@color/newTempDivider"
                 />
            <!-- Begin set body -->

            <LinearLayout
                android:id="@+id/t_workout_exercise_container_lay_setBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <!-- Begin exercise history -->

            <LinearLayout
                android:id="@+id/t_workout_exercise_container_lay_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/newTempStaticHeader"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/t_workout_exercise_container_instruction_title"
                    style="@style/text.Large"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Instructions"
                    android:textColor="@color/newTempBg" />

                <View style="@style/divider.thinDivider"
                    android:background="@color/newTempDivider"
                     />
            </LinearLayout>

            <!-- Begin exercise history -->

            <LinearLayout
                android:id="@+id/t_workout_exercise_container_lay_exerciseHistory"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/newTempStaticHeader"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/t_workout_exercise_container_exerciseHistory_title"
                    style="@style/text.Large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Exercise History"
                    android:textColor="@color/newTempBg" />
            </LinearLayout>

            <!-- Begin Comments -->

            <View style="@style/divider.thinDivider"
                android:background="@color/newTempDivider"
                 />

            <LinearLayout
                android:id="@+id/t_workout_exercise_container_lay_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/newTempStaticHeader"
                android:minHeight="60dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/t_workout_exercise_container_comments_title"
                    style="@style/text.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:minHeight="60dp"
                    android:text="Comments"
                    android:textColor="@color/newTempBg" />

                <TextView
                    android:id="@+id/t_workout_exercise_container_comments_body"
                    style="@style/text.Large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center_vertical"
                    android:text="In this exercise you should kill yourself."
                    android:textColor="@color/newTempBg" />
            </LinearLayout>
                    <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/newTempBlueHeader"
            />
        </LinearLayout>
        
    </LinearLayout>
    <!-- NOTHING BELOW THIS LINE. -->

</LinearLayout>