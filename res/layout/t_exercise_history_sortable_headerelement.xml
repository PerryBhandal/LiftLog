<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:id="@+id/t_exercise_history_sortable_headerelement_lay_root"
    android:background="@color/darkBlue"
     >

    <TextView
        android:id="@+id/t_exercise_history_sortable_headerelement_name"
        style="@style/text.Large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="Date"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/t_exercise_history_sortable_headerelement_expand"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/t_exercise_history_sortable_headerelement_name"
        android:src="@android:drawable/btn_dialog"
         />

</RelativeLayout>