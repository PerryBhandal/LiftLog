<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/t_workout_instance_header_element_lay_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/newTempBlueHeadrDark"
     >

    <TextView
        android:id="@+id/t_workout_instance_header_element_leftText"
        style="@style/text.Large"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@color/newTempBlueHeader"
        android:gravity="center_vertical|center_horizontal"
        android:text="Name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/t_workout_instance_header_element_rightText"
        style="@style/text.Large"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Upper Body"
        android:textColor="@color/white" />

</LinearLayout>