<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newTempBg" >

    <RelativeLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/main_menu_begin_workout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            layout="@layout/menu_item_colored" />

        <include
            android:id="@+id/main_menu_separator_one"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/main_menu_begin_workout"
            layout="@layout/separator" />

        <include
            android:id="@+id/main_menu_workout_history"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/main_menu_separator_one"
            layout="@layout/menu_item_colored" />

        <include
            android:id="@+id/main_menu_separator_two"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/main_menu_workout_history"
            layout="@layout/separator" />

        <include
            android:id="@+id/main_menu_routines"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/main_menu_separator_two"
            layout="@layout/menu_item_colored" />

        <include
            android:id="@+id/main_menu_separator_three"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/main_menu_routines"
            layout="@layout/separator" />

        <include
            android:id="@+id/main_menu_settings"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/main_menu_separator_three"
            layout="@layout/menu_item_colored" />
        
                <include
            android:id="@+id/main_menu_separator_four"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/main_menu_settings"
            layout="@layout/separator" />

        <include
            android:id="@+id/main_menu_buypro"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/main_menu_separator_four"
            layout="@layout/menu_item_colored"
            android:visibility="gone"
             />
    </RelativeLayout>

</ScrollView>