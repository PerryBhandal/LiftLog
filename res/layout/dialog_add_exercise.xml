<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/fragment_new_routine_name_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        style="@style/text.Large"
        android:text="@string/new_routine_name_prompt"
        android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/fragment_new_routine_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_new_routine_name_instructions"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="@string/new_routine_name_edittext_hint" />

    <TextView
        android:id="@+id/fragment_new_routine_name_conflict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_new_routine_name_edit_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/new_routine_name_error_default"
        android:textColor="#FF0000"
        style="@style/text.Medium"
        android:visibility="invisible" />

</RelativeLayout>